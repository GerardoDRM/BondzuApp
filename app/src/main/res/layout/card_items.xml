<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_credit_card_black_24dp"
            android:id="@+id/card_photo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_last_numbers"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/card_photo"
            android:layout_toEndOf="@+id/card_photo"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_date"
            android:layout_below="@+id/card_last_numbers"
            android:layout_alignLeft="@+id/card_last_numbers"
            android:layout_alignStart="@+id/card_last_numbers" />

        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:textSize="30sp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/white"
            android:id="@+id/btn_delete_Card"
            android:background="@drawable/ic_remove_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp" />

    </RelativeLayout>

</LinearLayout>