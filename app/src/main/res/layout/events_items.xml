<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/product_grid_space"
        android:id="@+id/event_card"
        android:elevation="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:id="@+id/event_card_photo"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_card_title"
                android:textSize="25sp"
                android:padding="4dp"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_card_start"
                android:textSize="14sp"
                android:padding="4dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_card_description"
                android:textSize="16sp"
                android:padding="4dp"
                 />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/add_calendar"
                android:text="@string/add_calendar"
                android:textSize="18sp"
                android:padding="4dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/colorPrimaryDark"
                 />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>